<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#18181B"
                tools:context="com.nextap.com.artific.MainActivity">

    <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="28sp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark" android:layout_above="@+id/desc"
            android:layout_marginBottom="49dp"/>
    <TextView
            android:id="@+id/desc"
            android:maxWidth="200dp"
            android:textSize="20sp"
            android:layout_width="369dp"
            android:layout_height="174dp"
            android:textAlignment="center"
            android:layout_marginBottom="150dp"
            android:textColor="@color/colorPrimaryDark" android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" android:layout_marginEnd="23dp"/>
    <ImageView
            android:layout_width="400dp"
            android:layout_height="match_parent" app:srcCompat="@drawable/intro_1" android:id="@+id/imageView2"
            android:layout_alignParentBottom="true" android:layout_marginBottom="5dp"/>

</RelativeLayout>